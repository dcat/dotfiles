# $dotfiles: alias, v 1.0  2016/03/11 00:58:00 dcat Exp $

LS=ls

alias ls="$LS -lh"
alias la="$LS -Alh"
alias ll="$LS -alhF"

alias pg=$PAGER
alias vi=$VISUAL
alias j=jobs
alias b=bg
alias f=fg
alias p=pwd
alias ,="$LS -1"

# logs
alias @messages='pplog < /var/log/messages'
alias @daemon='pplog < /var/log/daemon'

alias rot13="tr 'A-Za-z' 'N-ZA-Mn-za-m'"
alias p.iotek.org='curl -sLT- p.iotek.org'

# don't laugh
alias vis='cat -v'
alias clear=_spin

