# horizontal line
hr() {
	jot -b '‚ïê' -s '' `tput cols`
}

# set back-, or foreground color
color() {
	[ -z "$1" ] && return 1

	case "$1$2" in
	*[!0-9]*)
		echo usage: $0 '<fg>' '[bg]'
		return 1
		;;
	esac

	printf '\033[38;5;%dm' $1
	[ -n "$2" ] && printf '\033[48;5;%dm' $2

	return 0
}
